{
  "files": [],
  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020"],
    "module": "ESNext",

    /* Bundler mode */
    "moduleResolution": "node",
    "isolatedModules": true,
    "moduleDetection": "auto",

    /* Linting */
    "strict": false,
    "noFallthroughCasesInSwitch": false,
  }
}
